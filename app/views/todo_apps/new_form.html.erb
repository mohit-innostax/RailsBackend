<h1>Create a New Task</h1>

<%= form_with url: "/create-task", method: :post, local: true do |f| %>
  <div>
    <%= f.label :title, "Task Title" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :priority, "Priority Level" %>
    <%= f.text_field :priority %>
  </div>

  <div>
    <%= f.label :isCompleted, "Mark as Completed" %>
    <%= f.text_field :isCompleted %>
  </div>

  <div>
    <%= f.submit "Create Task" %>
  </div>
<% end %>
